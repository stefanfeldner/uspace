generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model comment {
  comment_id Int      @id @default(autoincrement())
  content    String
  created_at DateTime @db.Timestamp(6)
  user_id    String   @db.VarChar(255)
  post_id    Int
  post       post     @relation(fields: [post_id], references: [post_id], onDelete: NoAction, onUpdate: NoAction)
  user       user     @relation(fields: [user_id], references: [sub], onDelete: NoAction, onUpdate: NoAction)
}

model post {
  post_id     Int           @id @default(autoincrement())
  space_id    Int
  title       String
  tags        String
  content     String?
  created_at  DateTime      @db.Timestamp(6)
  space       space         @relation(fields: [space_id], references: [space_id], onDelete: NoAction, onUpdate: NoAction)
  comment     comment[]
  space_colab space_colab[]
}

model space {
  space_id    Int           @id @default(autoincrement())
  user_id     String        @db.VarChar(255)
  name        String
  description String?
  created_at  DateTime      @db.Timestamp(6)
  user        user          @relation(fields: [user_id], references: [sub], onDelete: NoAction, onUpdate: NoAction)
  post        post[]
  space_colab space_colab[]
}

model space_colab {
  space_colab_id Int     @id @default(autoincrement())
  space_id       Int
  user_id        String  @db.VarChar(255)
  post_id        Int
  canwrite       Boolean @default(false)
  post           post    @relation(fields: [post_id], references: [post_id], onDelete: NoAction, onUpdate: NoAction)
  space          space   @relation(fields: [space_id], references: [space_id], onDelete: NoAction, onUpdate: NoAction)
  user           user    @relation(fields: [user_id], references: [sub], onDelete: NoAction, onUpdate: NoAction)
}

model user {
  email          String        @db.VarChar(255)
  email_verified Boolean?
  username       String        @db.VarChar(50)
  picture_url    String?       @db.VarChar(255)
  sub            String        @id @db.VarChar(255)
  created_at     DateTime      @db.Timestamp(6)
  comment        comment[]
  space          space[]
  space_colab    space_colab[]
}
